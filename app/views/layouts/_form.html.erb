<%= form_for @job do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :employer %><br/>
    <%= f.text_field :employer %>
  </div>
  <div>
    <%= f.label :location %><br/>
    <%= f.text_field :location, placeholder: "New York, NY" %>
  </div>
  <div>
    <%= f.label :description %><br/>
    <%= f.text_area :description, size: '60x6' %>
  </div>
  <div>
    <%= f.label :requirements %><br/>
    <p>Use a dash ( - ) to indicate bullet points.</p><br/>
    <%= f.text_area :requirements, size: '60x6', placeholder: "- Your first job requirement." %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>